include ~/.config/sway/monitors
include ~/.config/sway/binds
include ~/.config/sway/wallpaper
include ~/.config/sway/settings
# include /etc/sway/config.d/* # from default config

# xdg-desktop-portal-wlr activation (for screen sharing)
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway


#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%d-%m-%Y %I:%M:%S %p'; do sleep 1; done
    tray_output *

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}
